<% provide(:title, "Editar item do cardápio") %>
<h1>Editar item do cardápio</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@cardapio) do |f| %>
      <%= render 'shared/error_messages_cardapio' %>

      <%= f.label :nome, 'Nome' %>
      <%= f.text_field :nome, class: 'form-control' %>

      <%= f.label :descricao, 'Descrição' %>
      <%= f.text_field :descricao, class: 'form-control' %>

      <%= f.label :preco, 'Preço' %>
      <%= f.text_field :preco, class: 'form-control' %>

      <%= f.submit "Salvar alterações", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>